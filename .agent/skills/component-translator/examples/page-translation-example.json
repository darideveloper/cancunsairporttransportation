/*
Usage in Component:

---
import { getLangFromUrl, useTranslations } from "../../lib/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Component requires page prop
interface Props {
  page: string;
}
const { page } = Astro.props;

// Get page-specific translations
const title = t(`pages.${page}.testimonials.title`);
const description = t(`pages.${page}.testimonials.description`);
const items = t(`pages.${page}.testimonials.items`);
---

<section>
  <h2>{title}</h2>
  <p>{description}</p>
  {Object.values(items).map((item) => (
    <div>
      <p>{item.name}</p>
      <p>{item.text}</p>
      <img alt={item.imageAlt} title={item.imageTitle} />
    </div>
  ))}
</section>

// Usage in page
<Testimonials page="home" />

Key Points:
✓ Page-specific translations are unique to each page
✓ Requires page prop to access correct translations
✓ Same component can show different content on different pages
✓ Useful for testimonials, pricing, FAQs that vary by page
*/