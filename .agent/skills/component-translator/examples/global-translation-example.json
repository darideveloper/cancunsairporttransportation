/*
Usage in Component:

---
import { getLangFromUrl, useTranslations } from "../../lib/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const businessName = t("global.branding.businessName");
const bookNowText = t("global.ui.button.bookNow");
const includeItems = t("global.sections.includes.items");
const bannerAlt = t("global.sections.bannerCta.imageAlt");
---

<h1>{businessName}</h1>
<button>{bookNowText}</button>
<ul>
  {includeItems.map((item) => <li>{item}</li>)}
</ul>
<img alt={bannerAlt} />

Key Points:
✓ Global translations are shared across all pages
✓ Use for headers, footers, common UI elements
✓ No page prop required
✓ Consistent across the entire site
*/