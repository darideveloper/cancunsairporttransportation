---
// Layout
import Layout from "../../layouts/Layout.astro";

// Libs
import { useTranslations } from "../../lib/i18n/utils";
import { getStaticPathsLangs } from "../../lib/utils";

// i18n
export const getStaticPaths = getStaticPathsLangs;

// Components
import PageSEO from "../../components/utils/PageSEO.astro";
import BookingForm from "../../components/organisms/BookingForm";
import PricingSection from "../../components/organisms/PricingSection.astro";
import Testimonials from "../../components/organisms/Testimonials.astro";
import FaqSection from "../../components/organisms/FaqSection.astro";
import Includes from "../../components/organisms/Includes.astro";
import PrivateDetails from "../../components/organisms/PrivateDetails.astro";

// Images
import homeBannerImg from "../../assets/images/home-banner.webp";
import standardImg from "../../assets/images/vehicles/standard.webp";
import groupClient1Img from "../../assets/images/clients/group-1.webp";
import groupClient2Img from "../../assets/images/clients/group-3.webp";
import groupClient3Img from "../../assets/images/clients/group-2.webp";

// Page data
const page = "group";

// Props
interface Props {
  lang: "en" | "es";
}
// Get language from params or props
const { lang } = Astro.params as { lang: "en" | "es" };

// Tranlation texts
const t = useTranslations(lang);
---

<Layout preloadImage={homeBannerImg.src}>
  <!-- Page SEO -->
  <PageSEO currentPage={page} slot="seo" />

  <!-- Form -->
  <div class="@container" id="booking-form">
    <BookingForm
      translations={t("global.booking")}
      defaultFrom="cun"
      defaultTo="merida"
      client:idle
      title={t(`pages.${page}.title`)}
    />
  </div>

  <!-- Service Includes -->
  <Includes page={page} image={standardImg} />

  <!-- Private Details -->
  <PrivateDetails page={page} />

  <!-- Clients testimonials -->
  <Testimonials
    page={page}
    images={[groupClient1Img, groupClient2Img, groupClient3Img]}
  />

  <!-- FAQs -->
  <FaqSection page={page} />

  <!-- Pricing transportation -->
  <PricingSection page={page} isRegularGrid />
</Layout>
