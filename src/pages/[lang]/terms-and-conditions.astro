---
import LegalLayout from "../../layouts/LegalLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const legalEntries = await getCollection("legal");

  // Filter for 'terms-and-conditions' entries only
  const termsEntries = legalEntries.filter((entry) =>
    entry.id.includes("terms-and-conditions"),
  );

  return termsEntries.map((entry) => {
    // entry.id is likely 'en/terms-and-conditions' or similar
    const [lang] = entry.id.split("/");
    return {
      params: { lang },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<LegalLayout title={entry.data.title} description={entry.data.description}>
  <Content />
</LegalLayout>
