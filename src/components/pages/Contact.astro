---
// Layout
import Layout from "../../layouts/Layout.astro";

// Libs
import { useTranslations } from "../../lib/i18n/utils";
import PageSEO from "../../components/utils/PageSEO.astro";
import SectionHeading from "../../components/molecules/SectionHeading.astro";
import ButtonCta from "../../components/atoms/ButtonCta.astro";

interface Props {
  lang: "en" | "es";
  pageKey: string;
}

const { lang, pageKey } = Astro.props;
const t = useTranslations(lang);

const contactInfo = t("global.footer.columns.contact");
---

<Layout pageKey={pageKey}>
  <PageSEO currentPage="contact" slot="seo" />

  <section class="container py-12">
    <SectionHeading title={t("pages.contact.title")}>
      <p class="text-lg">
        {t("pages.contact.description")}
      </p>
    </SectionHeading>

    <div class="mt-12 grid grid-cols-1 gap-12 lg:grid-cols-2">
      <!-- Contact Form -->
      <div class="bg-gray-light rounded-2xl p-8 shadow-sm">
        <form class="flex flex-col gap-6">
          <div class="flex flex-col gap-2">
            <label for="name" class="font-bold"
              >{t("pages.contact.form.name")}</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            />
          </div>

          <div class="flex flex-col gap-2">
            <label for="email" class="font-bold"
              >{t("pages.contact.form.email")}</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            />
          </div>

          <div class="flex flex-col gap-2">
            <label for="phone" class="font-bold"
              >{t("pages.contact.form.phone")}</label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            />
          </div>

          <div class="flex flex-col gap-2">
            <label for="message" class="font-bold"
              >{t("pages.contact.form.message")}</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            ></textarea>
          </div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col gap-8">
        <div>
          <h3 class="font-title mb-4 text-2xl font-bold">
            {t("pages.contact.info.title")}
          </h3>
          <ul class="flex flex-col gap-6">
            <li class="flex items-start gap-4">
              <div class="bg-accent/10 text-accent rounded-full p-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p
                  class="text-xs font-bold tracking-wider text-gray-400 uppercase"
                >
                  {t("pages.contact.info.address")}
                </p>
                <p class="text-lg">{contactInfo.address.value}</p>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <div class="bg-accent/10 text-accent rounded-full p-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class="text-xs font-bold tracking-wider text-gray-400 uppercase"
                >
                  {t("pages.contact.info.email")}
                </p>
                <a
                  href={contactInfo.email.href}
                  class="text-accent text-lg hover:underline"
                  >{contactInfo.email.value}</a
                >
              </div>
            </li>

            {
              contactInfo.phones.map((phone: any) => (
                <li class="flex items-start gap-4">
                  <div class="bg-accent/10 text-accent rounded-full p-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-bold tracking-wider text-gray-400 uppercase">
                      {phone.label}
                    </p>
                    <a
                      href={phone.href}
                      class="text-accent text-lg hover:underline"
                    >
                      {phone.value}
                    </a>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
