---
// Layout
import Layout from "../../../layouts/Layout.astro";

// Libs
// Libs
import { useTranslations } from "../../../lib/i18n/utils";
import PageSEO from "../../../components/utils/PageSEO.astro";
import SectionHeading from "../../../components/molecules/SectionHeading.astro";
import {
  FaUser,
  FaEnvelope,
  FaPhone,
  FaRegImage,
  FaComment,
} from "react-icons/fa";

interface Props {
  lang: "en" | "es";
  pageKey: string;
}

const { lang, pageKey } = Astro.props;
const t = useTranslations(lang);

const contactInfo = t("global.footer.columns.contact");

const formFields = [
  {
    name: "name",
    type: "text",
    icon: FaUser,
    label: t("pages.contact.form.name.label"),
    placeholder: t("pages.contact.form.name.placeholder"),
    required: true,
    colSpan: 1,
  },
  {
    name: "email",
    type: "email",
    icon: FaEnvelope,
    label: t("pages.contact.form.email.label"),
    placeholder: t("pages.contact.form.email.placeholder"),
    required: true,
    colSpan: 1,
  },
  {
    name: "phone",
    type: "tel",
    icon: FaPhone,
    label: t("pages.contact.form.phone.label"),
    placeholder: t("pages.contact.form.phone.placeholder"),
    required: true,
    colSpan: 1,
  },
  {
    name: "subject",
    type: "text",
    icon: FaRegImage,
    label: t("pages.contact.form.subject.label"),
    placeholder: t("pages.contact.form.subject.placeholder"),
    required: true,
    colSpan: 1,
  },
  {
    name: "message",
    type: "textarea",
    icon: FaComment,
    label: t("pages.contact.form.message.label"),
    placeholder: t("pages.contact.form.message.placeholder"),
    required: true,
    colSpan: 2,
  },
];
---

<Layout pageKey={pageKey}>
  <PageSEO currentPage="contact" slot="seo" />

  <section class="container py-12">
    <SectionHeading title={t("pages.contact.title")}>
      <p class="text-lg">
        {t("pages.contact.description")}
      </p>
    </SectionHeading>

    <div class="mt-12 grid grid-cols-1 gap-12 lg:grid-cols-2">
      <!-- Contact Form -->
      <div class="bg-gray-light rounded-2xl p-8 shadow-sm">
        <form class="grid grid-cols-1 gap-6 md:grid-cols-2">
          {
            formFields.map((field) => {
              const Icon = field.icon;
              return (
                <div
                  class={
                    field.colSpan === 2
                      ? "col-span-1 md:col-span-2"
                      : "col-span-1"
                  }
                >
                  <label for={field.name} class="mb-2 block font-bold">
                    {field.label}
                  </label>
                  <div class="focus-within:text-accent relative text-gray-500">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                      <Icon className="w-5 h-5" />
                    </div>
                    {field.type === "textarea" ? (
                      <textarea
                        id={field.name}
                        name={field.name}
                        rows="4"
                        required={field.required}
                        placeholder={field.placeholder}
                        class="focus:border-accent focus:ring-accent w-full rounded-lg border border-gray-300 py-3 pr-3 pl-10 transition-all outline-none focus:ring-2"
                      />
                    ) : (
                      <input
                        type={field.type}
                        id={field.name}
                        name={field.name}
                        required={field.required}
                        placeholder={field.placeholder}
                        class="focus:border-accent focus:ring-accent w-full rounded-lg border border-gray-300 py-3 pr-3 pl-10 transition-all outline-none focus:ring-2"
                      />
                    )}
                  </div>
                </div>
              );
            })
          }
          <div class="col-span-1 md:col-span-2">
            <button type="submit" class="btn btn-primary w-full md:w-auto">
              {t("pages.contact.form.submit")}
            </button>
          </div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col gap-8">
        <div>
          <h3 class="font-title mb-4 text-2xl font-bold">
            {t("pages.contact.info.title")}
          </h3>
          <ul class="flex flex-col gap-6">
            <li class="flex items-start gap-4">
              <div class="bg-accent/10 text-accent rounded-full p-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p
                  class="text-xs font-bold tracking-wider text-gray-400 uppercase"
                >
                  {t("pages.contact.info.address")}
                </p>
                <p class="text-lg">{contactInfo.address.value}</p>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <div class="bg-accent/10 text-accent rounded-full p-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p
                  class="text-xs font-bold tracking-wider text-gray-400 uppercase"
                >
                  {t("pages.contact.info.email")}
                </p>
                <a
                  href={contactInfo.email.href}
                  class="text-accent text-lg hover:underline"
                  >{contactInfo.email.value}</a
                >
              </div>
            </li>

            {
              contactInfo.phones.map((phone: any) => (
                <li class="flex items-start gap-4">
                  <div class="bg-accent/10 text-accent rounded-full p-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      />
                    </svg>
                  </div>
                  <div>
                    <p class="text-xs font-bold tracking-wider text-gray-400 uppercase">
                      {phone.label}
                    </p>
                    <a
                      href={phone.href}
                      class="text-accent text-lg hover:underline"
                    >
                      {phone.value}
                    </a>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
