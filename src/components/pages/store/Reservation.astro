---
// Layout
import Layout from "../../../layouts/Layout.astro";

// Libs
import { useTranslations } from "../../../lib/i18n/utils";
import PageSEO from "../../../components/utils/PageSEO.astro";
import SectionHeading from "../../../components/molecules/SectionHeading.astro";
import ButtonCta from "../../../components/atoms/ButtonCta.astro";

interface Props {
  lang: "en" | "es";
  pageKey: string;
}

const { lang, pageKey } = Astro.props;
const t = useTranslations(lang);
---

<Layout pageKey={pageKey}>
  <PageSEO currentPage="reservation" slot="seo" />

  <section class="container py-12">
    <SectionHeading title={t("pages.reservation.title")}>
      <p class="text-lg">
        {t("pages.reservation.description")}
      </p>
    </SectionHeading>

    <div class="mx-auto mt-12 max-w-2xl">
      <div class="bg-gray-light rounded-2xl p-8 shadow-sm">
        <form class="flex flex-col gap-6">
          <div class="flex flex-col gap-2">
            <label for="reservationId" class="font-bold"
              >{t("pages.reservation.form.reservationId")}</label
            >
            <input
              type="text"
              id="reservationId"
              name="reservationId"
              required
              placeholder="e.g. CUN-123456"
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            />
          </div>

          <div class="flex flex-col gap-2">
            <label for="email" class="font-bold"
              >{t("pages.reservation.form.email")}</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="focus:border-accent focus:ring-accent rounded-lg border border-gray-300 p-3 transition-all outline-none focus:ring-2"
            />
          </div>
        </form>

        <div class="mt-8 border-t border-gray-200 pt-8 text-center">
          <h4 class="mb-2 font-bold">{t("pages.reservation.help.title")}</h4>
          <p class="text-gray-600">{t("pages.reservation.help.text")}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
