---
// Layout
import Layout from '../../../layouts/Layout.astro'

// Libs
import { getTranslations } from '../../../lib/i18n/utils'
import PageSEO from '../../../components/utils/PageSEO.astro'

// Components
import ReservationDetailClient from '../../organisms/booking/ReservationDetailClient'

interface Props {
  lang: 'en' | 'es'
  pageKey: string
}

const { lang, pageKey } = Astro.props
---

<Layout pageKey={pageKey}>
  <PageSEO
    currentPage='reservationDetail'
    slot='seo'
  />

  <ReservationDetailClient
    client:only='react'
    lang={lang}
  />
</Layout>
