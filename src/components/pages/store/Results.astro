---
import Layout from "../../../layouts/Layout.astro";
import PageSEO from "../../utils/PageSEO.astro";
import RouteMap from "../../molecules/booking/RouteMap";

const { pageKey } = Astro.props;
const page = "results";
---

<Layout pageKey={pageKey}>
  <PageSEO currentPage={page} slot="seo" />
  <section class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4 lg:grid-cols-6">
      <div class="md:col-span-1 lg:col-span-2">
        <RouteMap client:load />
      </div>
      <div
        class="flex flex-col items-center justify-center md:col-span-3 lg:col-span-4"
      >
        <h1 class="font-title text-4xl font-bold text-gray-900 md:text-6xl">
          Results
        </h1>
        <p class="mt-4 text-gray-600">
          Showing available transportation options for your trip.
        </p>
      </div>
    </div>
  </section>
</Layout>
