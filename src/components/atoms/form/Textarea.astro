---
// Libs
import clsx from "clsx";

// Props
interface Props {
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  icon?: (props: any) => any;
  class?: string;
}

const {
  name,
  label,
  placeholder,
  required = false,
  rows = 4,
  icon: Icon,
  class: className = "",
} = Astro.props;
---

<div>
  <label for={name} class={`mb-2 block font-bold ${className}`}>
    {label}
  </label>
  <div class="focus-within:text-accent relative text-gray-500">
    {
      Icon && (
        <div class="pointer-events-none absolute top-4 left-0 flex items-center pl-3">
          <Icon className="h-5 w-5" aria-hidden="true" />
        </div>
      )
    }
    <textarea
      id={name}
      name={name}
      rows={rows}
      required={required}
      placeholder={placeholder}
      class={clsx(
        "focus:border-accent focus:ring-accent placeholder:text-gray-dark w-full rounded-lg border border-gray-300 py-3 pr-3 transition-all outline-none focus:ring-2",
        Icon ? "pl-12!" : "pl-3",
      )}></textarea>
  </div>
</div>
