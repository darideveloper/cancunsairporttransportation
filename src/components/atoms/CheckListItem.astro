---
import clsx from "clsx";
// Icons
import { FaCheck } from "react-icons/fa";

// Types
interface Props {
  text: string;
  class?: string;
  Icon?: any;
  iconColor?: string;
}
const {
  text,
  class: className,
  Icon = FaCheck,
  iconColor = "text-accent",
} = Astro.props;
---

<li class={clsx("rounded-2xl bg-white px-4 py-2", className)}>
  <span class="inline-block text-left">
    <Icon aria-hidden="true" className={clsx("mr-2 inline-block", iconColor)} />
    {text}
  </span>
</li>
