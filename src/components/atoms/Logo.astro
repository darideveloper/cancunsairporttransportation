---
// Libs
import { getLangFromUrl, getTranslations } from "../../lib/i18n/utils";

// Components
import { Image } from "astro:assets";

// Assets
import logo from "../../assets/images/logo.svg";

// Lang
const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const { class: className } = Astro.props;
---

<a
  href={lang === "es" ? "/es" : "/"}
  aria-label={t("global.branding.businessName")}
  class={`flex items-center ${className || "w-52 sm:w-60"}`}
>
  <Image
    src={logo}
    alt={`${t("global.branding.businessName")} logo`}
    title={t("global.branding.businessName")}
    class="w-full"
  />
</a>
