---
import clsx from "clsx";
import { useTranslations, getLangFromUrl } from "../../lib/i18n/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const MAP_SRC =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3721.5966047271118!2d-86.85725502440039!3d21.12864288433976!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f4c2bb0419c6491%3A0x145800cb5703a989!2sCancun%20Airport%20Transportation!5e0!3m2!1ses-419!2smx!4v1721079619885!5m2!1ses-419!2smx";
---

<iframe
  src={MAP_SRC}
  width="100%"
  height="100%"
  style="border:0;"
  allowfullscreen=""
  loading="lazy"
  title={t("global.locations.title")}
  aria-label={t("global.locations.title")}
  class={clsx(className)}
>
</iframe>
