---
import clsx from "clsx";
import { getTranslations, getLangFromUrl } from "../../lib/i18n/utils";

// Data
import { GOOGLE_MAPS } from "../../data/site-config";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<iframe
  src={GOOGLE_MAPS.embedUrl}
  width="100%"
  height="100%"
  style="border:0;"
  allowfullscreen=""
  loading="lazy"
  title={t("global.locations.title")}
  aria-label={t("global.locations.title")}
  class={clsx(className)}
>
</iframe>
