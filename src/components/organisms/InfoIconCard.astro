---
import SectionHeading from "../molecules/SectionHeading.astro";
import ServiceCard from "../molecules/ServiceCard.astro";

interface Props {
  title: string;
  description?: string;
  items: {
    title: string;
    text: string;
    Icon: any;
  }[];
  class?: string;
  titleColor?: string;
  TopIcon?: any;
  BottomIcon?: any;
  id?: string;
}

const {
  title,
  description,
  items,
  class: className = "",
  titleColor,
  TopIcon,
  BottomIcon,
  id = title.toLowerCase().trim().replace(/[^a-z0-9]+/g, "-").replace(/^-+|-+$/g, ""),
} = Astro.props;
---

<section class={`container mx-auto px-4 ${className}`} id={id} aria-label={title}>
  <div class="mb-16 flex flex-col items-center justify-center text-center">
    <div class="flex max-w-3xl flex-col items-center justify-center gap-6">
      {
        TopIcon && (
          <div class="flex h-12 w-12 items-center justify-center rounded-full bg-accent/10">
            <TopIcon className="text-3xl text-accent" aria-hidden="true" />
          </div>
        )
      }
      <SectionHeading title={title} class="text-center">
        {
          description && (
            <p class="mt-4 text-lg text-gray-600 md:text-xl">{description}</p>
          )
        }
      </SectionHeading>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
    {
      items.map((item) => (
        <ServiceCard title={item.title} text={item.text} Icon={item.Icon} />
      ))
    }
  </div>

  {
    BottomIcon && (
      <div class="mt-16 flex justify-center">
        <div class="animate-bounce rounded-full bg-accent/5 p-4">
          <BottomIcon className="text-4xl text-accent" aria-hidden="true" />
        </div>
      </div>
    )
  }
</section>

{
  titleColor && (
    <style is:global define:vars={{ titleColor }}>
      {`
      #${id} h2 {
        color: var(--titleColor) !important;
      }
    `}
    </style>
  )
}
