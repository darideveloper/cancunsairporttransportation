---

<div class='flex w-full animate-pulse flex-col gap-6'>
  {/* Selected Vehicle Summary Skeleton */}
  <div
    class='flex min-h-[160px] flex-col items-center gap-4 rounded-xl bg-gray-100/50 p-4 shadow-sm md:flex-row'
  >
    <div class='h-32 w-52 shrink-0 rounded-lg bg-gray-200'></div>
    <div class='flex w-full flex-1 flex-col gap-4 md:items-end'>
      <div class='h-8 w-3/4 rounded bg-gray-200 md:w-1/2'></div>
      <div class='h-4 w-full rounded bg-gray-200 md:w-2/3'></div>
      <div class='mt-2 flex justify-center gap-2 md:justify-end'>
        <div class='h-4 w-20 rounded bg-gray-200'></div>
        <div class='h-4 w-20 rounded bg-gray-200'></div>
        <div class='h-4 w-20 rounded bg-gray-200'></div>
      </div>
    </div>
  </div>

  {/* Information Sections Skeletons (Arrival, Return, Passenger) */}
  {
    [1, 2, 3].map((i) => (
      <div class='min-h-[192px] space-y-6 rounded-2xl border border-gray-100 bg-white px-4 py-6 shadow-xl'>
        <div class='mb-6 h-6 w-1/3 rounded bg-gray-200' />
        <div class='grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4'>
          {[1, 2, 3, 4].map((j) => (
            <div class='space-y-2'>
              <div class='h-4 w-24 rounded bg-gray-200' />
              <div class='h-10 w-full rounded border border-gray-200 bg-gray-100' />
            </div>
          ))}
        </div>
      </div>
    ))
  }

  {/* Booking Summary Skeleton */}
  <div
    class='space-y-6 rounded-2xl border border-gray-100 bg-white px-4 py-6 shadow-xl'
  >
    <div class='mb-4 h-6 w-1/3 rounded bg-gray-200'></div>
    <div class='space-y-3'>
      {
        [1, 2, 3].map((k) => (
          <div class='flex justify-between'>
            <div class='h-4 w-1/4 rounded bg-gray-200' />
            <div class='h-4 w-1/6 rounded bg-gray-200' />
          </div>
        ))
      }
      <div class='flex justify-between border-t border-gray-200 pt-3'>
        <div class='h-6 w-1/3 rounded bg-gray-300'></div>
        <div class='h-6 w-1/4 rounded bg-gray-300'></div>
      </div>
    </div>
  </div>

  {/* Payment Method Skeleton */}
  <div
    class='space-y-6 rounded-2xl border border-gray-100 bg-white px-4 py-6 shadow-xl'
  >
    <div class='mb-6 h-6 w-1/3 rounded bg-gray-200'></div>
    <div class='flex gap-4'>
      <div class='h-16 flex-1 rounded border border-gray-200 bg-gray-100'></div>
      <div class='h-16 flex-1 rounded border border-gray-200 bg-gray-100'></div>
    </div>
  </div>

  {/* Submit Button Skeleton */}
  <div class='mt-4 h-16 w-full rounded-lg bg-gray-300'></div>
</div>
