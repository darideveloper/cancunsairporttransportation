---
import clsx from 'clsx'
import { getTranslations } from '../../../lib/i18n/utils'

interface Props {
  status: 'CONFIRMED' | 'PENDING' | 'CANCELLED'
  lang: 'en' | 'es'
  size?: 'sm' | 'md' | 'lg'
}

const { status, lang, size = 'md' } = Astro.props
const t = getTranslations(lang)

const statusClasses = {
  CONFIRMED: 'text-blue border-blue bg-blue/10',
  PENDING: 'text-yellow-600 border-yellow-600 bg-yellow-50',
  CANCELLED: 'text-red-600 border-red-600 bg-red-50',
}

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-2',
}

const label = status === 'CONFIRMED' ? 'CONFIRMED' : status // Or translate if needed
---

<span
  class={clsx(
    'rounded border font-bold uppercase text-center inline-block',
    statusClasses[status],
    sizeClasses[size],
  )}
>
  {label}
</span>
