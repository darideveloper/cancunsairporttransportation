---
interface Props {
  title: string;
  links: {
    text: string;
    href: string;
    target?: string;
    rel?: string;
  }[];
}

const { title, links } = Astro.props;
---

<div>
  <h3 class="font-title text-gray-dark mb-4 text-sm font-bold tracking-wider">
    {title}
  </h3>
  <nav aria-label={`${title} navigation`}>
    <ul class="flex flex-col gap-2">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              target={link.target}
              rel={link.rel}
              class="text-gray-dark hover:text-blue font-medium transition-colors"
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
