---
// Libs
import { Image } from "astro:assets";
import { generateId } from "../../lib/utils/ids";

// Props
interface Props {
  title: string;
  image: {
    src: ImageMetadata;
    alt: string;
    title?: string;
  };
  class?: string;
}

const { title, image, class: className } = Astro.props;

const id = generateId("image-card", title);
---

<article
  class={`${className} flex items-center justify-start gap-4 border-gray/10 rounded-md border-2 px-6 py-4`}
  aria-labelledby={id}
>
  <div class="">
    <Image
      src={image.src}
      alt={image.alt}
      title={image.title}
      width={64}
      height={64}
      class=""
    />
  </div>

  <div class="">
    <header>
      <h3 class="text-blue text-xl font-bold" id={id}>
        {title}
      </h3>
    </header>
    <div class="">
      <slot />
    </div>
  </div>
</article>
