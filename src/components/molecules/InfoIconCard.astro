---
interface Props {
  title: string;
  text: string;
  TitleIcon?: any;
  BottomIcon?: any;
  bottomText?: string;
  href?: string;
}

const { title, text, TitleIcon, BottomIcon, bottomText, href } = Astro.props;
const id = `info-card-${title
  .toLowerCase()
  .trim()
  .replace(/[^a-z0-9]+/g, "-")
  .replace(/^-+|-+$/g, "")}`;
---

<article
  class="group flex flex-col items-start rounded-2xl border border-gray-100 bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
  aria-labelledby={id}
>
  <div class="mb-3 flex items-center gap-2">
    {TitleIcon && <TitleIcon class="text-accent text-xl" aria-hidden="true" />}
    <h3 class="text-xl font-bold text-gray-900" id={id}>{title}</h3>
  </div>
  <p class="mb-6 text-base leading-relaxed text-gray-600">
    {
      href ? (
        <a href={href} class="hover:text-accent transition-colors duration-300">
          {text}
        </a>
      ) : (
        text
      )
    }
  </p>
  {
    (BottomIcon || bottomText) && (
      <div class="mt-auto flex w-full items-center justify-between border-t border-gray-50 pt-4">
        {bottomText && (
          <span class="text-accent text-sm font-semibold">{bottomText}</span>
        )}
        {BottomIcon && (
          <BottomIcon
            class="text-accent/80 group-hover:text-accent text-2xl transition-colors duration-300"
            aria-hidden="true"
          />
        )}
      </div>
    )
  }
</article>
