---
interface Props {
  title: string;
  text: string;
  Icon: any;
}

const { title, text, Icon } = Astro.props;
const id = `service-${title.toLowerCase().replace(/\s+/g, "-")}`;
---

<article
  class="group flex flex-col items-start rounded-2xl border border-gray-100 bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
  aria-labelledby={id}
>
  <div
    class="bg-accent/5 text-accent group-hover:bg-accent mb-6 flex items-center justify-center rounded-xl p-4 transition-colors duration-300 group-hover:text-white"
  >
    <Icon class="text-3xl" aria-hidden="true" />
  </div>
  <h3 class="mb-3 text-xl font-bold text-gray-900" id={id}>{title}</h3>
  <p class="text-base leading-relaxed text-gray-600">{text}</p>
</article>
