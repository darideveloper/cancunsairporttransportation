---
// Libs
import { getLangFromUrl, getTranslations } from "../../lib/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const footerMessages = t("global.footer");

const currentYear = new Date().getFullYear();
const copyright = footerMessages.bottomBar.copyright.replace(
  "{year}",
  currentYear.toString(),
);
const terms = footerMessages.bottomBar.terms;
const termsTitle = t("global.accessibility.legal.terms");
const privacyTitle = t("global.accessibility.legal.privacy");
---

<div class="border-gray-light mt-12 border-t py-8">
  <div class="flex flex-col items-center justify-between gap-6 p-0 md:flex-row">
    <p class="text-gray text-center text-sm md:text-left">
      {copyright}
    </p>
    <nav aria-label="Secondary navigation">
      <ul class="flex flex-wrap justify-center gap-6">
        <li>
          <a
            href={`/${lang}/terms-and-conditions`}
            title={termsTitle}
            class="text-gray hover:text-blue text-sm font-medium transition-colors"
          >
            {terms}
          </a>
        </li>
        <li>
          <a
            href={lang === "es" ? "/es/privacidad" : "/privacy"}
            title={privacyTitle}
            class="text-gray hover:text-blue text-sm font-medium transition-colors"
          >
            {footerMessages.bottomBar.privacy}
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
